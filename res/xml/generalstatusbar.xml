<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:title="@string/Generalstatusbar_category"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

<!-- statusbar icons -->
<PreferenceScreen
            android:key="status_bar_icons"
            android:title="@string/statusbar_items_title" >
            <intent
                android:action="android.intent.action.MAIN"
                android:targetPackage="com.android.systemui"
                android:targetClass="com.android.systemui.tuner.TunerActivity">
                <extra android:name="tuner" android:value="status_bar" />
            </intent>
        </PreferenceScreen>

<!--statusbar brightness control -->
<cyanogenmod.preference.CMSystemSettingSwitchPreference
         android:key="status_bar_brightness_control"
         android:title="@string/status_bar_toggle_brightness"
         android:summary="@string/status_bar_toggle_brightness_summary"
         android:defaultValue="false" />
 
 
<!-- Roaming indicator -->
<com.aim.freedomhub.preference.SystemSettingSwitchPreference
            android:key="roaming_indicator_icon"
            android:title="@string/roaming_indicator_icon_title"
            android:summary="@string/roaming_indicator_icon_summary"
            android:defaultValue="true"/>

<!-- Double tap to sleep -->
    <cyanogenmod.preference.CMSystemSettingSwitchPreference
         android:key="double_tap_sleep_gesture"
         android:title="@string/status_bar_double_tap_to_sleep_title"
         android:summary="@string/status_bar_double_tap_to_sleep_summary"
         android:defaultValue="true" />

 <!-- statusbar notification count -->
    <!-- <cyanogenmod.preference.CMSystemSettingSwitchPreference
         android:key="status_bar_notif_count"
         android:title="@string/status_bar_notif_count_title"
         android:summary="@string/status_bar_notif_count_summary"
         android:defaultValue="false" /> -->
 
<!-- quick pulldown-->
<PreferenceScreen
         android:key="qspulldown"
         android:title="@string/qspulldown_title"
         android:fragment="com.aim.freedomhub.categories.QsPullDown" />

</PreferenceScreen>
