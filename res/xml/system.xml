<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/system_category"
    android:layout="@layout/tab"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

<!-- button settings -->
<PreferenceScreen
            android:key="buttons"
            android:icon="@drawable/freedomhub_ico"
	    android:fragment="com.aim.freedomhub.fragments.ButtonSettings"
            android:title="@string/buttons_title" />
	
 <!-- powermenu -->
  <Preference
            android:key="powermenu"
            android:icon="@drawable/freedomhub_ico"
	    android:fragment="com.aim.freedomhub.fragments.PowerMenu"
            android:title="@string/powermenu_category" />

<PreferenceCategory
            android:key="category_fp"
            android:title="@string/fp_category_title">

     <com.aim.freedomhub.preference.SystemSettingSwitchPreference
             android:key="fingerprint_success_vib"
             android:title="@string/fprint_sucess_vib_title"
             android:summary="@string/fprint_sucess_vib_summary"
             android:icon="@drawable/freedomhub_ico"
             android:defaultValue="true" />

    <SwitchPreference
            android:key="fp_unlock_keystore"
            android:icon="@drawable/freedomhub_ico"
            android:title="@string/fp_unlock_keystore_title"
            android:summary="@string/fp_unlock_keystore_summary"
            android:persistent="false" />

      </PreferenceCategory>


<Preference
            android:key="sound"
            android:fragment="com.aim.freedomhub.fragments.SoundSettings"
            android:icon="@drawable/freedomhub_ico"
            android:title="@string/sound_title" />
			

<PreferenceScreen
            android:key="vol_steps"
            android:fragment="com.aim.freedomhub.fragments.VolumeStepsFragment"
            android:icon="@drawable/freedomhub_ico"
            android:title="@string/volume_steps_fragment_title"
            android:summary="@string/volume_steps_summary" /> 

<com.aim.freedomhub.preference.SystemSettingSwitchPreference
            android:key="screenshot_crop_and_share"
            android:title="@string/screenshot_crop_and_share_title"
            android:summary="@string/screenshot_crop_and_share_summary"
            android:defaultValue="false" />

</PreferenceScreen>
