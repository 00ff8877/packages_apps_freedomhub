<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/interface_ui_category"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

<!--custom density-->
<com.android.settings.display.DensityPreference
            android:key="density"
            android:title="@string/developer_smallest_width" />
	
<!--color engine -->
    <com.android.settings.display.ThemePreference
                android:key="theme"
		android:title="@string/theme" />

<!-- AIM themes -->
  <PreferenceScreen
            android:key="daynight"
            android:fragment="com.aim.freedomhub.fragments.DayNightSettings"
            android:title="@string/daynight_title" />

    <!-- Blur UI -->
 	<PreferenceScreen
             android:key="blur_personalization"
             android:title="@string/settings_blur_cat"
	     android:fragment="com.aim.freedomhub.fragments.BlurPersonalizations"  />

<PreferenceScreen
        android:key="animations_category"
        android:title="@string/animations_title"
        android:fragment="com.aim.freedomhub.fragments.AnimationSettings" />

<PreferenceScreen
            android:key="main_nav_bar"
            android:fragment="com.android.settings.aim.navbar.NavBarSettings"
            android:title="@string/main_nav_bar_title" />

</PreferenceScreen>
