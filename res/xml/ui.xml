<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/ui_category"
    android:layout="@layout/tab"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

<com.android.settings.display.DensityPreference
            android:key="density"
            android:icon="@drawable/freedomhub_ico"
            android:title="@string/developer_smallest_width" />

  <PreferenceScreen
            android:key="daynight"
            android:fragment="com.aim.freedomhub.fragments.DayNightSettings"
            android:icon="@drawable/freedomhub_ico"
            android:title="@string/daynight_title" />

   <com.aim.freedomhub.preference.SystemSettingSwitchPreference
        android:key="lockscreen_media_metadata"
        android:title="@string/media_art_title"
        android:icon="@drawable/freedomhub_ico"
        android:summary="@string/media_art_summary"
        android:defaultValue="true" />

<PreferenceScreen
            android:key="main_nav_bar"
            android:fragment="com.android.settings.aim.navbar.NavBarSettings"
            android:icon="@drawable/freedomhub_ico"
            android:title="@string/main_nav_bar_title" />

      <com.aim.freedomhub.preference.SecureSettingSwitchPreference
               android:key="lockscreen_enable_qs"
               android:title="@string/lockscreen_enable_qs_title"
               android:icon="@drawable/freedomhub_ico"
               android:summary="@string/lockscreen_enable_qs_summary"
               android:defaultValue="true" />

<com.aim.freedomhub.preference.SystemSettingSwitchPreference
        android:key="lockscreen_battery_info"
        android:icon="@drawable/freedomhub_ico"
        android:title="@string/lockscreen_battery_info_title"
        android:summary="@string/lockscreen_battery_info_summary"
        android:defaultValue="true" />

<PreferenceScreen
            android:key="LockClock_ui"
            android:fragment="com.aim.freedomhub.categories.LockClock"
            android:summary="@string/lockscreen_ui_summary"
            android:icon="@drawable/freedomhub_ico"
            android:title="@string/lockclock_ui_title" />

</PreferenceScreen>

